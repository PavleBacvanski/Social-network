@model GamePlay.ViewModels.GameFormViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Add game</h2>

@using (Html.BeginForm("Create", "Game"))
{
    <p class="alert-info">Description field is optional</p>
    @Html.AntiForgeryToken()
   
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "eg 1 Jan 2020" })
        @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeholder = "eg 20:00" })
        @Html.ValidationMessageFor(m => m.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Category)
        @Html.DropDownListFor(m => m.Category, new SelectList(Model.Categories, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Category)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Desc)
        @Html.TextBoxFor(m => m.Desc, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn bg-primary">Save</button>

}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")}


